generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("RDP03_INS1_DATABASE_URL_DESA")
}

model T_Estudiantes {
  Id_Estudiante           String             @id @map("_id")
  Nombres                  String
  Apellidos                String
  Estado                   Boolean
  Google_Drive_Foto_ID     String?
  Id_Aula                  String?            @db.ObjectId
  aula                     T_Aulas?           @relation(fields: [Id_Aula], references: [Id_Aula])
  relaciones               T_Relaciones_E_R[]
  asistencias_primaria     T_A_E_P_1[]
  asistencias_primaria_2   T_A_E_P_2[]
  asistencias_primaria_3   T_A_E_P_3[]
  asistencias_primaria_4   T_A_E_P_4[]
  asistencias_primaria_5   T_A_E_P_5[]
  asistencias_primaria_6   T_A_E_P_6[]
  asistencias_secundaria_1 T_A_E_S_1[]
  asistencias_secundaria_2 T_A_E_S_2[]
  asistencias_secundaria_3 T_A_E_S_3[]
  asistencias_secundaria_4 T_A_E_S_4[]
  asistencias_secundaria_5 T_A_E_S_5[]

  @@map("T_Estudiantes")
}

model T_Responsables {
  Id_Responsable      String             @id @map("_id")
  Nombres              String
  Apellidos            String
  Nombre_Usuario       String             @unique
  Celular              String?
  Contraseña          String
  Google_Drive_Foto_ID String?
  relaciones           T_Relaciones_E_R[]

  @@map("T_Responsables")
}

model T_Relaciones_E_R {
  Id_Relacion     String         @id @default(auto()) @map("_id") @db.ObjectId
  Tipo            String
  Id_Responsable String
  Id_Estudiante  String
  responsable     T_Responsables @relation(fields: [Id_Responsable], references: [Id_Responsable])
  estudiante      T_Estudiantes  @relation(fields: [Id_Estudiante], references: [Id_Estudiante])

  @@map("T_Relaciones_E_R")
}

model T_Profesores_Primaria {
  Id_Profesor_Primaria String    @id @map("_id")
  Nombres               String
  Apellidos             String
  Genero                String
  Nombre_Usuario        String    @unique
  Estado                Boolean
  Correo_Electronico    String?
  Celular               String
  Contraseña           String
  Google_Drive_Foto_ID  String?
  aulas                 T_Aulas[]

  @@map("T_Profesores_Primaria")
}

model T_Profesores_Secundaria {
  Id_Profesor_Secundaria String             @id @map("_id")
  Nombres                 String
  Apellidos               String
  Genero                  String
  Nombre_Usuario          String             @unique
  Estado                  Boolean
  Correo_Electronico      String?
  Celular                 String
  Contraseña             String
  Google_Drive_Foto_ID    String?
  aulas                   T_Aulas[]
  cursos                  T_Cursos_Horario[]

  @@map("T_Profesores_Secundaria")
}

model T_Aulas {
  Id_Aula                 String                   @id @default(auto()) @map("_id") @db.ObjectId
  Nivel                   String
  Grado                   Int
  Seccion                 String
  Color                   String
  Id_Profesor_Primaria   String?
  Id_Profesor_Secundaria String?
  profesor_primaria       T_Profesores_Primaria?   @relation(fields: [Id_Profesor_Primaria], references: [Id_Profesor_Primaria])
  profesor_secundaria     T_Profesores_Secundaria? @relation(fields: [Id_Profesor_Secundaria], references: [Id_Profesor_Secundaria])
  estudiantes             T_Estudiantes[]
  cursos_horario          T_Cursos_Horario[]

  @@map("T_Aulas")
}

model T_Cursos_Horario {
  Id_Curso_Horario             String                  @id @default(auto()) @map("_id") @db.ObjectId
  Nombre_Curso                 String
  Dia_Semana                   Int
  Indice_Hora_Academica_Inicio Int
  Cant_Hora_Academicas         Int
  Id_Profesor_Secundaria      String
  Id_Aula_Secundaria           String                  @db.ObjectId
  profesor_secundaria          T_Profesores_Secundaria @relation(fields: [Id_Profesor_Secundaria], references: [Id_Profesor_Secundaria])
  aula                         T_Aulas                 @relation(fields: [Id_Aula_Secundaria], references: [Id_Aula])

  @@map("T_Cursos_Horario")
}

model T_Auxiliares {
  Id_Auxiliar         String  @id @map("_id")
  Nombres              String
  Apellidos            String
  Genero               String
  Nombre_Usuario       String  @unique
  Estado               Boolean
  Correo_Electronico   String?
  Celular              String
  Contraseña          String
  Google_Drive_Foto_ID String?

  @@map("T_Auxiliares")
}

model T_Directivos {
  Id_Directivo         String     @id @map("_id")
  Nombres              String  
  Apellidos            String  
  Genero               String  
  Identificador_Nacional String  
  Nombre_Usuario       String  @unique 
  Correo_Electronico   String  
  Celular              String  
  Contraseña          String  
  Google_Drive_Foto_ID String? 
  }

model T_Personal_Administrativo {
  Id_Personal_Administrativo String  @id @map("_id")
  Nombres                     String 
  Apellidos                   String 
  Genero                      String 
  Nombre_Usuario              String @unique
  Estado                      Boolean
  Celular                     String 
  Contraseña                 String 
  Google_Drive_Foto_ID        String?
  Cargo             String
}

model T_Bloqueo_Roles {
  Rol                  String  @id @map("_id")
  Bloqueo_Total        Boolean
  Timestamp_Desbloqueo BigInt

  @@map("T_Bloqueo_Roles")
}




model T_Registro_Fallos_Sistema {
  Id_Registro_Fallo_Sistema String   @id @default(auto()) @map("_id") @db.ObjectId
  Fecha                     DateTime
  Componente                String
  Detalles                  String?

  @@map("T_Registro_Fallos_Sistema")
}

